<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
  
<mapper namespace="board">
	
	<select id="today" resultType="string">
		SELECT CURDATE()
	</select>
	
	<select id="total" resultType="int">
		SELECT 
			COUNT(*)
		FROM
			BOARD
	</select>
	
	<select id="selectList" parameterType="com.edu.SpringBoardPractice.util.PageMaker" resultType="com.edu.SpringBoardPractice.domain.BoardDTO">
		SELECT
			 BNO
			,VIEWS
			,WRITER
			,TITLE
			,CONTENTS
			,INSERT_DATE
			,UPDATE_DATE
		FROM
			BOARD
		ORDER BY
			BNO DESC
		LIMIT
			#{startPage}, #{pageSize}
	</select>
	
	<select id="selectOne" parameterType="int" resultType="com.edu.SpringBoardPractice.domain.BoardDTO">
		SELECT
			 BNO
			,VIEWS
			,WRITER
			,TITLE
			,CONTENTS
			,INSERT_DATE
			,UPDATE_DATE
		FROM
			BOARD
		WHERE
			BNO = #{bno}
	</select>
	
	<update id="update" parameterType="com.edu.SpringBoardPractice.domain.BoardDTO">
		UPDATE
			BOARD
		SET
			 TITLE = #{title}
			,CONTENTS = #{contents}
			,UPDATE_DATE = NOW()
		WHERE
			BNO = #{bno}
	</update>
	
	<delete id="delete">
		DELETE FROM
			BOARD
		WHERE 
			BNO = #{bno}
	</delete>
	
</mapper>  